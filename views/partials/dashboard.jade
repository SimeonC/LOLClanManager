.row
	.col-lg-4
		h2 Players
			a.pull-right.btn(href="manage/newplayer")
				i.fa.fa-plus
		.list-group
			a.list-group-item(ng-repeat="key in playerOrder | orderBy: leaderThenPlayerName", href="manage/player/{{key}}", ng-class="{'alert-danger': data.players[key].updatingerror && data.players[key].updatingerror != ''}")
				!= helpers.outputPlayer('key')
	.col-lg-4
		h2 Sessions
			a.pull-right.btn(href="manage/newsession")
				i.fa.fa-plus
		.list-group
			a.list-group-item(ng-repeat="(key, session) in data.sessions", href="manage/session/{{key}}") {{session.name}}
	.col-lg-4
		h2 Stats
		a.btn(href="manage/settings") Settings